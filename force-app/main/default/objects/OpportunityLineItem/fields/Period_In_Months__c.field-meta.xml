<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Period_In_Months__c</fullName>
    <externalId>false</externalId>
    <formula>(YEAR(End_date__c) - YEAR(Entry_Date__c)) * 12 +
(MONTH(End_date__c) - MONTH(Entry_Date__c)) +
(
  (DAY(End_date__c) / 
    CASE(MONTH(End_date__c),
      1,31, 2, IF(MOD(YEAR(End_date__c),4)=0,29,28),
      3,31, 4,30, 5,31, 6,30,
      7,31, 8,31, 9,30, 10,31,
      11,30, 12,31, 0)
  )
  -
  ((DAY(Entry_Date__c) - 1) /
    CASE(MONTH(Entry_Date__c),
      1,31, 2, IF(MOD(YEAR(Entry_Date__c),4)=0,29,28),
      3,31, 4,30, 5,31, 6,30,
      7,31, 8,31, 9,30, 10,31,
      11,30, 12,31, 0)
  )
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Period In Months</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
