<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Expiry_date_before_canceling_contract</fullName>
    <active>true</active>
    <errorConditionFormula>AND (ISPICKVAL( Status ,&apos;Terminated&apos;), ISNULL( Contract_Termination_Date__c ))</errorConditionFormula>
    <errorDisplayField>Contract_Termination_Date__c</errorDisplayField>
    <errorMessage>Please add the Contract Termination Date before canceling the contract</errorMessage>
</ValidationRule>
