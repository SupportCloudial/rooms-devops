<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lead_No_Hebrew_On_Conversion</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status, &quot;Converted&quot;),
    OR(
        REGEX(FirstName, &quot;[\\u0590-\\u05FF]+&quot;),
        REGEX(LastName, &quot;[\\u0590-\\u05FF]+&quot;)
    )
)</errorConditionFormula>
    <errorMessage>You cannot convert this lead because the first name or last name contains Hebrew characters.</errorMessage>
</ValidationRule>
