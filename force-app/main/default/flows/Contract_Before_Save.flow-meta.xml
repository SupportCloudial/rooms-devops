    <decisions>
        <name>Calculated_End_Date_Check</name>
        <label>Calculated End Date Check</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Calculated_End_Date_Is_Passed_Due</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>CalculatedEndDate</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>$Flow.CurrentDate</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>ShouldProcessContractTermination</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Change_Contract_Status</targetReference>
            </connector>
            <label>Calculated End Date Is Passed Due</label>
        </rules>
    </decisions>
    <decisions>
        <name>Found_Site_Manager</name>
        <label>Found Site Manager?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Calculated_End_Date_Check</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes_Active_Site_Manager_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Find_Site_Manager</leftValueReference>
                <operator>IsBlank</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Contract_Owner</targetReference>
            </connector>
            <label>Yes, Active Site Manager Found</label>
        </rules>
    </decisions>
    <decisions>
        <name>Should_Update_Contract_Owner</name>
        <label>Should Update Contract Owner?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Calculated_End_Date_Check</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes_Update_Contract_Owner</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Location__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Location__r.Site_Manager__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Find_Site_Manager</targetReference>
            </connector>
            <label>Yes, Update Contract Owner</label>
        </rules>
    </decisions>
    <description>27/10: Added Status, Contract Termination Date and Reason changes.</description>
    <environments>Default</environments>
    <formulas>
        <name>CalculatedEndDate</name>
        <dataType>Date</dataType>
        <expression>IF(ISNULL( {!$Record.Contract_Termination_Date__c} ), {!$Record.EndDate}, {!$Record.Contract_Termination_Date__c})</expression>
    </formulas>
    <formulas>
        <name>ContractTerminationDate</name>
        <dataType>Date</dataType>
        <expression>IF(
    ISBLANK({!$Record.Contract_Termination_Date__c}),
    IF(
        NOT(ISBLANK({!$Record.EndDate})),
        {!$Record.EndDate},
        TODAY()
    ),
    {!$Record.Contract_Termination_Date__c}
)</expression>
    </formulas>
    <formulas>
        <name>ContractTerminationReason</name>
        <dataType>String</dataType>
        <expression>IF(
  ISBLANK(TEXT({!$Record.Contract_Termination_Reason__c})),
  &quot;Optimization Process&quot;,
  TEXT({!$Record.Contract_Termination_Reason__c})
)</expression>
    </formulas>
    <formulas>
        <name>LocationSiteManagerName</name>
        <dataType>String</dataType>
        <expression>{!$Record.Location__r.Site_Manager__r.FirstName}+&apos; &apos;+{!$Record.Location__r.Site_Manager__r.LastName}</expression>
    </formulas>
    <formulas>
        <name>ShouldProcessContractTermination</name>
        <dataType>Boolean</dataType>
        <expression>OR(
    AND(
        ISNEW(),
        NOT(ISNULL({!$Record.EndDate}))
    ),
    AND(
        ISCHANGED({!$Record.EndDate}),
        NOT(ISNULL({!$Record.EndDate}))
    ),
    AND(
        ISCHANGED({!$Record.Contract_Termination_Date__c}),
        NOT(ISNULL({!$Record.Contract_Termination_Date__c}))
    )
)</expression>
    </formulas>
    <interviewLabel>Contract Before Save {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Contract Before Save</label>
    <processMetadataValues>
