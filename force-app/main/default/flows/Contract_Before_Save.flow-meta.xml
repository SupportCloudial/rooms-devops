        <name>Change_Contract_Status</name>
        <label>Change Contract Status</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>$Record.Contract_Termination_Date__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>ContractTerminationDate</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>$Record.Contract_Termination_Reason__c</assignToReference>
