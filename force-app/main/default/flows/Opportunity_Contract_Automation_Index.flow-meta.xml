    <formulas>
        <name>dateOfinDEX</name>
        <dataType>Date</dataType>
        <expression>IF(
    DAY({!$Flow.CurrentDate}) &gt;= 15,
    DATE(
        YEAR({!$Flow.CurrentDate}),
        MONTH({!$Flow.CurrentDate}),
        15
    ),
    DATE(
        YEAR({!$Flow.CurrentDate}) - IF(MONTH({!$Flow.CurrentDate}) = 1, 1, 0),
        IF(MONTH({!$Flow.CurrentDate}) = 1, 12, MONTH({!$Flow.CurrentDate}) - 1),
        15
    )
)</expression>
    </formulas>
