        <label>Is Owner Active?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes_Owner_Is_Active</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Owner.IsActive</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Expiry_Email_To_Owner</targetReference>
            </connector>
            <label>Yes, Owner Is Active</label>
        </rules>
        <rules>
            <name>No_Send_To_Manager</name>
            <conditionLogic>and</conditionLogic>
